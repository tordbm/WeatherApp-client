{
  "extends": "@vue/tsconfig/tsconfig.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "vite.config.ts"],
  "compilerOptions": {
    "composite": true,
    "types": ["node", "bootstrap", "vite/client"],
    "noEmit": false,
    "target": "esnext",
    "ignoreDeprecations": "5.0",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
}
